# Hugging Face API Token (get from https://huggingface.co/settings/tokens)
HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxxx

# Groq API (Get from https://console.groq.com)
GROQ_API_KEY=gsk_xxxxxxxxxxxxxxxxxxxxx

# Deepgram API (Get from https://console.deepgram.com)
DEEPGRAM_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxx

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-app.onrender.com

# Upload limits
MAX_UPLOAD_MB=40
MAX_DURATION_SECONDS=45

# HF Model Configuration (optional overrides)
# These models are confirmed to work on HF free tier
HF_ASR_MODEL=facebook/wav2vec2-base-960h
HF_LLM_MODEL=google/flan-t5-base

# Rate Limiting
RATE_LIMIT_PER_MINUTE=10/minute

# Supabase Configuration
# Get from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# JWT Secret for additional token validation
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
